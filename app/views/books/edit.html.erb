<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <!--バリデーション(エラーメッセージ)-->
      <% if @book.errors.any? %>
        <div class="text-danger">
          <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @book, url: book_path(@book), method: :patch, local: true do |f| %>
        <div class="form-groupe mb-3">
          <label for="title">Title</label><br>
          <%= f.text_field :title, id: "title", class: "form-control"%>
        </div>
        <div class="form-groupe mb-3">
          <label for="body">Opinion</label><br>
          <%= f.text_area :body, id: "title", class: "form-control" %>
        </div>
        <%= f.submit "Update Book", class: "btn btn-success mb-3" %>
      <% end %>

      <%= link_to "Show", book_path(@book) %>
      <%="|" %>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
